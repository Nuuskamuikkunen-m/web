@model IEnumerable<Notes.Web.PL.Models.UserNoteModel>

@{
    ViewData["Title"] = "GetUsersNote";
}

<h1>Мои заметочки</h1>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else
{
<table class="table">
    <thead>
        <tr>
            @*
            <th>
            @Html.DisplayNameFor(model => model.ID)
            </th>

            *@
            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th></th>
        </tr>
    </thead>



    <tbody>
@foreach (var item in Model) {
        <tr>
                @*
            <td>
                @Html.DisplayFor(modelItem => item.ID)
            </td>
                *@
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
            <td>
                    @Html.ActionLink("Edit", "EditNote", "Note",  new { id=item.ID }, null) |
                    @Html.ActionLink("Details", "GetNote", "Note", new { id=item.ID }, null) |
                    @Html.ActionLink("Delete", "RemoveNote", "Note", new { id=item.ID }, null)
            </td>
        </tr>
}
    </tbody>
</table>
}
<p>
    <a asp-action="AddNote" asp-controller="Note">Добавить новую заметку</a>
</p>